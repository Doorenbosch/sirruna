{
  "functions": {
    "api/breakdown.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/market-mood.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/breaking-news-check.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/breaking-news-check",
      "schedule": "*/5 * * * *"
    }
  ]
}
